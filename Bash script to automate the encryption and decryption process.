#!/bin/bash
# Function to encrypt a file
encrypt_file() {
   if [ $# -ne 2 ]; then
       echo "Usage: $0 encrypt <input_file> <output_file>"
       exit 1
   fi
   input_file=$1
   output_file=$2
   openssl enc -aes-256-cbc -salt -in "$input_file" -out "$output_file"
   echo "File encrypted successfully!"
}
# Function to decrypt a file
decrypt_file() {
   if [ $# -ne 2 ]; then
       echo "Usage: $0 decrypt <input_file> <output_file>"
       exit 1
   fi
   input_file=$1
   output_file=$2
   openssl enc -d -aes-256-cbc -in "$input_file" -out "$output_file"
   echo "File decrypted successfully!"
}
# Main script
if [ $# -lt 3 ]; then
   echo "Usage: $0 [encrypt|decrypt] <input_file> <output_file>"
   exit 1
fi
operation=$1
input_file=$2
output_file=$3
case "$operation" in
   encrypt)
       encrypt_file "$input_file" "$output_file"
       ;;
   decrypt)
       decrypt_file "$input_file" "$output_file"
       ;;
   *)
       echo "Invalid operation. Please choose 'encrypt' or 'decrypt'."
       exit 1
       ;;
esac
exit 0
